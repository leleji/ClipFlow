<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ClipFlow.Desktop.ViewModels"
             xmlns:controls="using:ClipFlow.Desktop.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ClipFlow.Desktop.Views.DownloadSettingsPage"
             x:DataType="vm:DownloadSettingsViewModel">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,8,0">
        <StackPanel Spacing="20" Margin="30,0,22,0">
			<StackPanel >
				<controls:SettingItem Title="启用下载"
									  BorderThickness="1,1,1,0"
									  CornerRadius="4,4,0,0"
									Description="允许从服务器下载内容更新剪贴板">
					<controls:SettingItem.ActionContent>
						<ToggleSwitch IsChecked="{Binding EnableDownload}"
									OnContent=""
									OffContent=""
									Margin="0,-6,0,-6"/>
					</controls:SettingItem.ActionContent>
				</controls:SettingItem>
				<controls:SettingItem Title="启动通知"
									  BorderThickness="1,1,1,0"
									  CornerRadius="0"
									Description="收到服务器更新时候发起通知">
					<controls:SettingItem.ActionContent>
						<ToggleSwitch IsChecked="{Binding EnableDownloadNotification}"
									  IsEnabled="{Binding EnableDownload}"
									OnContent=""
									OffContent=""
									Margin="0,-6,0,-6"/>
					</controls:SettingItem.ActionContent>
				</controls:SettingItem>
				<controls:SettingItem Title="下载文本"
									  BorderThickness="1,1,1,0"
									  CornerRadius="0"

									Description="允许同步服务器的文本内容">
					<controls:SettingItem.ActionContent>
						<ToggleSwitch IsChecked="{Binding EnableDownloadText}"
									IsEnabled="{Binding EnableDownload}"
									OnContent=""
									OffContent=""
									Margin="0,-6,0,-6"/>
					</controls:SettingItem.ActionContent>
				</controls:SettingItem>

				<controls:SettingItem Title="下载图片"
									  BorderThickness="1,1,1,0"
									  CornerRadius="0"
											
									Description="允许同步服务器的图片文件">
					<controls:SettingItem.ActionContent>
						<ToggleSwitch IsChecked="{Binding EnableDownloadImage}"
									IsEnabled="{Binding EnableDownload}"
									OnContent=""
									OffContent=""
									Margin="0,-6,0,-6"/>
					</controls:SettingItem.ActionContent>
				</controls:SettingItem>

				<controls:SettingItem Title="下载文件"
									  BorderThickness="1,1,1,0"
									  CornerRadius="0"
											
									Description="允许同步服务器的文件和文件夹">
					<controls:SettingItem.ActionContent>
						<ToggleSwitch IsChecked="{Binding EnableDownloadFile}"
									IsEnabled="{Binding EnableDownload}"
									OnContent=""
									OffContent=""
									Margin="0,-6,0,-6"/>
					</controls:SettingItem.ActionContent>
				</controls:SettingItem>
				<controls:SettingItem Title="最大同步下载文件大小"
									  BorderThickness="1,1,1,1"
									  CornerRadius="0"
											
			Description="下载文件的最大大小(MB) (0表示不限制)">
					<controls:SettingItem.ActionContent>
						<NumericUpDown Value="{Binding MaxDownloadFileSize}"
									 Minimum="0"
									 Maximum="1000"
									 Increment="10"
									 Width="150"/>
					</controls:SettingItem.ActionContent>
				</controls:SettingItem>
			</StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl> 